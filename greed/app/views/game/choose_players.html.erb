<html>
  <head>
    <%= stylesheet_link_tag 'styles' %>
  </head>
  <body>
    <div id="wrap">
      <div id="header">
        <h1>Greed!</h1>
      </div>
      <h3>Select the players</h3>
      <% if flash[:error] -%>
        <div class="error_message"><%= flash[:error] %></div>
      <% end -%>
      <% form_for :game, :url => assign_players_game_path(@game) do |f| %>
        <%= f.error_messages %>
        <% @players.each do |player| -%>
          <%= check_box_tag "players[]", player.to_s, false, :id => player.name %>
          <%= label_tag player.name  %>
        <% end -%>
        <p>
          <%= f.submit "Play" %>
        </p>
      <% end -%>
      <div id="footer">
        &nbsp
      </div>
    </div>
  </body>
</html>

