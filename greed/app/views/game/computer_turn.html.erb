<html>
  <head>
    <%= stylesheet_link_tag 'styles' %>
  </head>
  <body>
    <div id="wrap">
      <div id="header">
        <h1>Greed!</h1>
      </div>
      <div id="sidebar">
        <h2>Players</h2>
        <ul>
          <% @players.each do |player| -%>
            <%= render :partial => "player",
                  :locals => { :player => player, :current => false } -%>
          <% end -%>
        </ul>        
      </div>
      <div id="main">
        <% @turn_histories.each do |turn_data| -%>
          <h3><%= turn_data.player.name %>'s Turn</h3>
          <% turn_data.history.each do |roll_data| -%>
            <%= render :partial => "rolls",
                  :locals => { :player => turn_data.player, :roll_data => roll_data } -%>
          <% end -%>
        <% end -%>
      </div>
      <div id="footer">
        &nbsp
      </div>
    </div>
  </body>
</html>
