<html>
  <head>
    <%= stylesheet_link_tag 'styles' %>
  </head>
  <body>
    <div id="wrap">
      <div id="header">
        <h1>Greed!</h1>
      </div>
      <div id="sidebar">
        <h2>Players</h2>
        <ul>
          <% @players.each do |player| -%>
            <%= render :partial => "player",
                  :locals => { :player => player, :current => false } -%>
          <% end -%>
        </ul>        
      </div>
      <div id="main">
        <h3>Rolls</h3>
        <% 3.times do %>
          <%= render :partial => "rolls", :locals => { :hold => false } -%>
        <% end %>
        <%= render :partial => "rolls", :locals => { :hold => true } -%>
      </div>
      <div id="footer">
        &nbsp
      </div>
    </div>
  </body>
</html>
